@model IEnumerable<Car_Hire_Services__CHS_.ViewModel.CarViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">


    @if (Model.Count() > 0)
    {
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>S/N</th>
                    <th>BankName</th>
                    <th>Account/Number</th>
                    <th>Product</th>
                    <th>Cars</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.BankName</td>
                        <td>@item.AccountNumber</td>
                        <td>@item.Product</td>
                        <td>@item.Cars</td>
                    </tr>
                }


            </tbody>
        </table>
    }
</div>
